{
    "functions": {
        "api/**/*": {
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/product/:slug",
            "has": [
                {
                    "type": "header",
                    "key": "User-Agent",
                    "value": "(.*facebookexternalhit.*|.*WhatsApp.*|.*twitterbot.*|.*linkedinbot.*|.*telegrambot.*|.*Pinterest.*|.*Slackbot.*|.*Discordbot.*)"
                }
            ],
            "destination": "/api/og-product?slug=:slug"
        },
        {
            "source": "/((?!api/.*|assets/.*|favicon.ico).*)",
            "destination": "/index.html"
        }
    ]
}